# D&B API Credentials
DNB_CLIENT_ID=your_dnb_client_id_here
DNB_CLIENT_SECRET=your_dnb_client_secret_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/traceone_monitoring_dev

# Security
ENCRYPTION_KEY=your_32_byte_base64_encryption_key_here

# Optional overrides
# LOG_LEVEL=DEBUG
# LOG_FILE=./logs/traceone-monitoring-dev.log
# MONITORING_POLLING_INTERVAL=300
# MONITORING_MAX_NOTIFICATIONS=100

# SFTP Storage Configuration (optional)
# Enable SFTP storage by setting this to true
# SFTP_ENABLED=false
# SFTP_HOSTNAME=mft.dnb.com
# SFTP_PORT=22
# SFTP_USERNAME=trace
# SFTP_PASSWORD=  # Optional, use private key authentication instead
# SFTP_PRIVATE_KEY_PATH=~/.ssh/id_rsa
# SFTP_PRIVATE_KEY_PASSPHRASE=  # Optional, only if your key has a passphrase
# SFTP_REMOTE_PATH=/gets  # Base directory on SFTP server
# SFTP_FILE_FORMAT=json  # json, csv, or xml
# SFTP_COMPRESS=false
# SFTP_TIMEOUT=30
# SFTP_MAX_RETRIES=3
# SFTP_ORGANIZE_BY_DATE=true
# SFTP_ORGANIZE_BY_REGISTRATION=true

# For production, also set:
# ENVIRONMENT=production
# DEBUG=false
